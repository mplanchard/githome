[core]
    # Improve status perf on big repos especially
    fsmonitor = true
[commit]
	gpgsign = true
[user]
	email = msplanchard@gmail.com
	name = Matthew Planchard
	signingkey = BA628A8D7DD99FEDDC83C6C93D77D8F065D3570B
[include]
	path = ~/.gitconfig.local
[includeIf "gitdir:~/s/spec/**"]
	path = ~/.gitconfig.spectrust
[includeIf "gitdir:~/s/spec-protect/**"]
	path = ~/.gitconfig.spectrust
[github]
	user = mplanchard
[merge]
	conflictstyle = zdiff3
[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta
[pull]
	ff = only
[fetch]
    # No sense not pruning remote stuff that no longer exists whenever
    # we fetch
	prune = true
    pruneTags = true
    all = true
[push]
	default = current
[rebase]
    autoSquash = true
    autoStash = true
    updateRefs = true
[rerere]
	enabled = true
	autoupdate = true
[branch]
    sort = -committerdate
[tag]
    sort = -version:refname
[diff]
    # Better diff algorithm
    algorithm = histogram
    # Better coloration of moved lines
    colorMoved = plain
    # Spend extra time calculation file renames
    renames = true
[ineractive]
	diffFilter = delta --color-only
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[gitlab]
	user = mplanchard
[gitlab "gitlab.com/api"]
	user = mplanchard
[maintenance]
	repo = /home/matthew/s/spec/spec-protect
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
